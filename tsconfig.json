{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@wiser/app": ["app"],
      "@wiser/app/*": ["app/*"],
      "@wiser/core/*": ["core/*"],
      "@wiser/utils/*": ["core/utils/*"],
      "@wiser/utils": ["core/utils"],
      "@wiser/hocs/*": ["core/hocs/*"],
      "@wiser/hocs": ["core/hocs"],
      "@wiser/components/*": ["components/*"],
      "@wiser/endpoints/*": ["core/endpoints/*"],
      "@wiser/endpoints": ["core/endpoints"],
      "@wiser/types/*": ["types/*"],
      "@wiser/types": ["types"],
      "@wiser/assets/*": ["assets/*"]
    },
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "noImplicitAny": false,
    "strict": false,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "fileTransformer.js"],
  "exclude": ["node_modules", "**/__tests__"]
}
